<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="actPropertyAnimBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="actPropertyAnimImageView">
        <item name="android:layout_width">@dimen/property_anim_imageview_width</item>
        <item name="android:layout_height">@dimen/property_anim_imageview_height</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="actPropertyAnimTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="actPropertyAnimTextViewScale" parent="actPropertyAnimTextView">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:background">@color/color_google_blue</item>
    </style>

    <style name="actPropertyAnimTextViewScaleLbl" parent="actPropertyAnimTextView">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="actPropertyAnimTextViewAlpha">
        <item name="android:layout_width">@dimen/frg_alpha_tv_width</item>
        <item name="android:layout_height">@dimen/frg_alpha_tv_height</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/color_google_yellow</item>
    </style>

    <style name="actPropertyAnimImageViewRotate" parent="actPropertyAnimImageView">
        <item name="android:src">@drawable/icon_android</item>
    </style>

</resources>
