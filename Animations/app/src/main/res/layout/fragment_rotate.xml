<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_google_red"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                style="@style/actPropertyAnimTextViewScaleLbl"
                android:text="Clockwise rotation"
                />

            <ImageView
                android:id="@+id/ivRotatationClockwise"
                style="@style/actPropertyAnimImageViewRotate"
                />

            <TextView
                style="@style/actPropertyAnimTextViewScaleLbl"
                android:text="Anti clockwise rotation"
                />

            <ImageView
                android:id="@+id/ivRotatationAntiClockwise"
                style="@style/actPropertyAnimImageViewRotate"
                />

            <TextView
                style="@style/actPropertyAnimTextViewScaleLbl"
                android:text="X axis rotation"
                />

            <ImageView
                android:id="@+id/ivRotatationX"
                style="@style/actPropertyAnimImageViewRotate"
                />

            <TextView
                style="@style/actPropertyAnimTextViewScaleLbl"
                android:text="Y axis rotation"
                />

            <ImageView
                android:id="@+id/ivRotatationY"
                style="@style/actPropertyAnimImageViewRotate"
                />

        </LinearLayout>

    </RelativeLayout>
</layout>