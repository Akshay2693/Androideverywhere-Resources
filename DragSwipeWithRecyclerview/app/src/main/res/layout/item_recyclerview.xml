<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_view"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dragswipewithrecyclerview.customviews.MTextView
            android:id="@+id/tvDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            custom_font:name="regular"
            tools:text="str dummy" />

        <RelativeLayout
            android:id="@+id/rlSwipeToDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/color_0e92ee"
            android:visibility="gone"
            tools:visibility="gone"
            >

            <com.dragswipewithrecyclerview.customviews.MTextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="DELETE"
                android:textColor="@android:color/white"
                custom_font:name="regular"
                />

            <com.dragswipewithrecyclerview.customviews.MTextView
                android:id="@+id/tvUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:text="UNDO"
                custom_font:name="regular"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_ebedf0" />

</LinearLayout>
